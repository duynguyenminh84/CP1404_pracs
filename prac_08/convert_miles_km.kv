BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            on_text: app.calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.increment(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.increment(input_miles.text, -1)
    Label:
        id: output_label
        text: app.output_km
        color: (1, 1, 0, 1)